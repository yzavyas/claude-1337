---
import Base from '../../layouts/Base.astro';
import PluginCatalog from '../../components/PluginCatalog.svelte';
import marketplace from '../../data/marketplace.json';

const plugins = marketplace.plugins;
---

<Base title="plugin catalog" description="browse all claude-1337 plugins by component type">
  <p><a href="/claude-1337/reference/">&larr; reference</a></p>

  <h1>plugin catalog</h1>

  <p>all plugins in the claude-1337 marketplace. filter by component type (skills, hooks, agents) or search by keywords.</p>

  <div class="install-reminder">
    <p><strong>install core-1337 first</strong> to activate 1337 mode:</p>
    <pre><code>/plugin marketplace add yzavyas/claude-1337
/plugin install core-1337@claude-1337</code></pre>
  </div>

  <PluginCatalog {plugins} format="cards" client:load />
</Base>

<style>
  .install-reminder {
    background: rgba(26, 26, 26, 0.6);
    border: 1px solid var(--green);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    box-shadow: 0 0 16px rgba(158, 206, 106, 0.2);
  }

  .install-reminder p {
    margin: 0 0 0.5rem 0;
  }

  .install-reminder strong {
    color: var(--green);
    text-shadow: 0 0 8px rgba(158, 206, 106, 0.5);
  }

  .install-reminder pre {
    margin: 0;
    background: rgba(0, 0, 0, 0.4);
    border-left: 2px solid var(--green);
  }

  .install-reminder code {
    background: none;
    color: var(--green);
  }
</style>
