---
import Base from '../../layouts/Base.astro';
import marketplace from '../../data/marketplace.json';

const plugins = marketplace.plugins;
---

<Base title="reference" description="plugin documentation and external resources">
  <h2>plugin catalog</h2>
  <ul>
    <li><a href="/claude-1337/reference/catalog/">interactive catalog</a> — filter by component type, search by keywords</li>
  </ul>

  <h2>research</h2>
  <ul>
    <li><a href="/claude-1337/reference/research/">skill activation research</a> — validation framework, 20% → 84% study, eval tools</li>
  </ul>

  <h2>claude code documentation</h2>
  <ul>
    <li><a href="https://code.claude.com/docs/en/skills">skills</a> — official skills documentation</li>
    <li><a href="https://code.claude.com/docs/en/plugins">plugins</a> — official plugins documentation</li>
    <li><a href="https://code.claude.com/docs/en/plugin-marketplaces">plugin marketplaces</a> — official marketplace documentation</li>
    <li><a href="https://code.claude.com/docs/en/hooks">hooks</a> — official hooks documentation</li>
    <li><a href="https://code.claude.com/docs/en/agents">agents</a> — official agents documentation</li>
  </ul>

  <h2>plugin specs</h2>
  <ul class="plugin-list">
    {plugins.map((plugin) => (
      <li><a href={`/claude-1337/reference/${plugin.name}/`}>{plugin.name}</a> — {plugin.description}</li>
    ))}
  </ul>
</Base>
