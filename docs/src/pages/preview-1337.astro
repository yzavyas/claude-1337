<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>claude-1337</title>
  <style>
    :root {
      --bg: #1a1a1a;
      --bg-alt: #222;
      --fg: #c8c8c8;
      --fg-dim: #666;
      --accent: #7aa2f7;
      --green: #9ece6a;
      --yellow: #e0af68;
      --red: #f7768e;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }

    html {
      font-size: 15px;
    }

    body {
      font-family: ui-monospace, 'SF Mono', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
      background: var(--bg);
      color: var(--fg);
      line-height: 1.6;
      padding: 2rem;
      max-width: 80ch;
      margin: 0 auto;
    }

    /* Header - just text, no decoration */
    header {
      margin-bottom: 3rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--fg-dim);
    }

    h1 {
      font-size: 1rem;
      font-weight: normal;
      color: var(--fg-dim);
    }

    h1 strong {
      color: var(--fg);
      font-weight: bold;
    }

    .desc {
      color: var(--fg-dim);
      font-size: 0.9rem;
      margin-top: 0.5rem;
    }

    /* Navigation - like a file listing */
    nav {
      margin: 2rem 0;
    }

    nav ul {
      list-style: none;
    }

    nav li {
      padding: 0.25rem 0;
    }

    nav a {
      color: var(--accent);
      text-decoration: none;
    }

    nav a:hover {
      text-decoration: underline;
    }

    nav .dir::before {
      content: 'd ';
      color: var(--fg-dim);
    }

    nav .file::before {
      content: '- ';
      color: var(--fg-dim);
    }

    /* Section headers */
    h2 {
      font-size: 1rem;
      font-weight: normal;
      color: var(--yellow);
      margin: 2.5rem 0 1rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    h2::before {
      content: '## ';
      color: var(--fg-dim);
    }

    h3 {
      font-size: 1rem;
      font-weight: bold;
      color: var(--green);
      margin: 1.5rem 0 0.5rem;
    }

    h3::before {
      content: '### ';
      color: var(--fg-dim);
    }

    p {
      margin: 0.75rem 0;
    }

    /* Code - barely styled */
    code {
      background: var(--bg-alt);
      padding: 0.15em 0.3em;
      font-size: 0.95em;
    }

    pre {
      background: var(--bg-alt);
      padding: 1rem;
      overflow-x: auto;
      margin: 1rem 0;
      border-left: 2px solid var(--fg-dim);
    }

    pre code {
      background: none;
      padding: 0;
    }

    /* Tables - plain */
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 1rem 0;
      font-size: 0.9rem;
    }

    th, td {
      text-align: left;
      padding: 0.5rem;
      border-bottom: 1px solid var(--bg-alt);
    }

    th {
      color: var(--fg-dim);
      font-weight: normal;
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.05em;
    }

    /* Stats - no frills */
    .stats {
      display: flex;
      gap: 3rem;
      margin: 1.5rem 0;
      padding: 1rem;
      background: var(--bg-alt);
    }

    .stat-value {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .stat-value.bad { color: var(--red); }
    .stat-value.good { color: var(--green); }

    .stat-label {
      font-size: 0.8rem;
      color: var(--fg-dim);
    }

    /* Links */
    a {
      color: var(--accent);
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Footer */
    footer {
      margin-top: 4rem;
      padding-top: 1rem;
      border-top: 1px solid var(--fg-dim);
      font-size: 0.85rem;
      color: var(--fg-dim);
    }

    /* Inline markers */
    .new::after {
      content: ' [new]';
      color: var(--green);
    }

    .wip::after {
      content: ' [wip]';
      color: var(--yellow);
    }
  </style>
</head>
