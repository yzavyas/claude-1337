---
// Sidebar.astro - Dynamic directory navigation sidebar
const { section } = Astro.props;
const currentPath = Astro.url.pathname;

// Dynamically get all pages in the section directory using import.meta.glob
const pages = import.meta.glob('../pages/**/*.astro', { eager: true });

// Filter pages for this section and generate nav items
const items = Object.entries(pages)
  .filter(([path]) => path.includes(`/pages/${section}/`))
  .map(([path, module]) => {
    // Extract filename without extension
    const fileName = path.split('/').pop()?.replace('.astro', '') || '';

    // Skip index files
    if (fileName === 'index') return null;

    // Generate href - handle nested paths
    const pathParts = path.split(`/pages/${section}/`)[1]?.split('/') || [];
    const slug = pathParts.join('/').replace('.astro', '');
    const href = `/claude-1337/${section}/${slug}/`;

    // Use frontmatter title if available, otherwise use filename
    const label = (module as any).frontmatter?.title || fileName;

    return { href, label, fileName };
  })
  .filter(item => item !== null)
  .sort((a, b) => a.label.localeCompare(b.label));
---

<aside class="sidebar">
  <nav class="sidebar-nav">
    <div class="section-title">{section}</div>
    <ul>
      {items.map(item => (
        <li>
          <a
            href={item.href}
            class:list={['nav-link', { active: currentPath === item.href || currentPath === item.href.replace(/\/$/, '') }]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: 240px;
    height: 100vh;
    background: var(--bg);
    border-right: 1px solid var(--fg-dim);
    padding: 6rem 0 2rem 0;
    overflow-y: auto;
    z-index: 100;
  }

  .sidebar-nav {
    padding: 0 1.5rem;
  }

  .section-title {
    font-family: ui-monospace, 'SF Mono', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--fg-dim);
    margin-bottom: 1rem;
    font-weight: bold;
  }

  .sidebar-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-nav li {
    margin: 0;
  }

  .nav-link {
    display: block;
    padding: 0.625rem 1rem 0.625rem 1.25rem;
    font-family: ui-monospace, 'SF Mono', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
    font-size: 0.9rem;
    color: var(--fg-dim);
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.2s ease, color 0.2s ease;
    position: relative;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 2px;
    height: 0;
    background: var(--green);
    transition: height 0.2s ease;
  }

  .nav-link:hover {
    background: rgba(158, 206, 106, 0.05);
    color: var(--green);
  }

  .nav-link:hover::before {
    height: 70%;
  }

  .nav-link.active {
    background: rgba(158, 206, 106, 0.1);
    color: var(--green);
    text-shadow: 0 0 8px rgba(158, 206, 106, 0.4);
  }

  .nav-link.active::before {
    height: 70%;
  }

  /* Scrollbar styling */
  .sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar::-webkit-scrollbar-thumb {
    background: var(--fg-dim);
    border-radius: 3px;
  }

  .sidebar::-webkit-scrollbar-thumb:hover {
    background: var(--green);
  }

  @media (max-width: 1024px) {
    .sidebar {
      display: none;
    }
  }
</style>
